doctype html
html
  head
    title HK Cinema
    meta(
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    )
    link(
      rel='stylesheet'
      href='stylesheets/index.css'
    )
  body
    .login-page
      h1 HK Cinema
      form(
        action='/verifyLogin'
        onsubmit='return checkEmpty();'
        method='post'
      )
        input#username(
          type='text'
          name='username'
          placeholder='Username'
        )
        br
        input#password(
          type='password'
          name='password'
          placeholder='Password'
        )
        br
        br
        input.button(
          type='submit'
          value='SUBMIT'
        )
        br
        button.button(
          onclick='location.href="createaccount"'
          type='button'
        ) Create an account
    script.
      function checkEmpty() {
        var ac = document.getElementById('username');
        var pw = document.getElementById('password');
        if (!ac.value || !pw.value) {
          alert('Please do not leave the fields empty');
          return false;
        }
        return true;
      }
